<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event1500Metres">

    <ImageView
        android:id="@+id/iv1500MLogo"
        android:layout_width="148dp"
        android:layout_height="156dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/running" />

    <TextView
        android:id="@+id/tv1500MTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:text="@string/_1500M_title"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/iv1500MLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1500MRules"
        android:layout_width="379dp"
        android:layout_height="130dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6dp"
        android:text="@string/rules_1500M"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1500MRollsLeft" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1500MDice"
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1500MRules">

        <ImageView
            android:id="@+id/iv1500MDie1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/die1" />

        <ImageView
            android:id="@+id/iv1500MDie5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv1500MDie1"
            app:srcCompat="@drawable/die1" />

        <ImageView
            android:id="@+id/iv1500MDie6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv1500MDie5"
            app:layout_constraintTop_toBottomOf="@+id/iv1500MDie2"
            app:srcCompat="@drawable/die1" />

        <ImageView
            android:id="@+id/iv1500MDie7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv1500MDie6"
            app:layout_constraintTop_toBottomOf="@+id/iv1500MDie3"
            app:srcCompat="@drawable/die1" />

        <ImageView
            android:id="@+id/iv1500MDie8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv1500MDie7"
            app:layout_constraintTop_toBottomOf="@+id/iv1500MDie4"
            app:srcCompat="@drawable/die1" />

        <ImageView
            android:id="@+id/iv1500MDie4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv1500MDie3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/die1" />

        <ImageView
            android:id="@+id/iv1500MDie3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv1500MDie2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/die1" />

        <ImageView
            android:id="@+id/iv1500MDie2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv1500MDie1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/die1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv1500MRollsLeftLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="@string/rolls_left_label"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/iv1500MLogo"
        app:layout_constraintTop_toBottomOf="@+id/tv1500MTitle" />

    <TextView
        android:id="@+id/tv1500MRollsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="14dp"
        android:text="@string/rolls_left_text_1500M"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/tv1500MRollsLeftLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv1500MTitle" />

    <Button
        android:id="@+id/button_1500M_Roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="17dp"
        android:text="@string/button_roll_text"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl1500MDice" />

    <Button
        android:id="@+id/button_1500M_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="17dp"
        android:text="@string/button_keep_text"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintStart_toEndOf="@+id/button_1500M_Roll"
        app:layout_constraintTop_toBottomOf="@+id/cl1500MDice" />

    <TextView
        android:id="@+id/tv1500MScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="37dp"
        android:text="@string/score_label"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_1500M_Replay"
        app:layout_constraintTop_toBottomOf="@+id/button_1500M_Score" />

    <TextView
        android:id="@+id/tv1500MScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/score_text_empty"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/tv1500MScoreLabel"
        app:layout_constraintTop_toBottomOf="@+id/button_1500M_Score" />

    <Button
        android:id="@+id/button_1500M_Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/button_done_text"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1500M_Replay" />

    <Button
        android:id="@+id/button_1500M_Replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9dp"
        android:text="@string/replay_button_text"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@android:color/holo_orange_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1500M_Roll" />
</androidx.constraintlayout.widget.ConstraintLayout>